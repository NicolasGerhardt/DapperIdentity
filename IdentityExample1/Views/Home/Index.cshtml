@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <br />
    <br />
    <div class="justify-content-center card-group">
        <div class="row justify-content-center text-center">
            <div class="col-sm-6">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">Check out this cool Task manager</h5>
                        <p class="card-text">When you have an account you can start tracking all of your tasks!</p>
                        <a asp-area="" asp-controller="Tasks" asp-action="Index" class="btn btn-primary">Task Tracker</a>
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">Account</h5>
                        <p class="card-text">Signup for an account and start getting all the benifits! </p>
                        <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-primary">Sign Up</a>
                        <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-primary">Sign In</a>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>
